<section>
  <ul class='user-container'>
    <% @users.each do |user| %>
      <li class='user'>
        <% if user.photo %>
          <img src='<%= user.photo %>' alt='<%= user.name %> thumbnail' />
        <% end %>
        <div class='user-name'>
          <h2><%= link_to user.name, user_path(user) %></h2>
          <p>Number of Posts: <%= user.posts_counter %></p>
        </div>
      </li>
    <% end %>
  </ul>
</section>

