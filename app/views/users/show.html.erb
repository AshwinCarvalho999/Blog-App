<section>
  <div class='one-user'>
    <div class='user-photo'>
      <% if @user.photo %>
        <img class="card-img-top" src='<%= @user.photo %>' alt='<%= @user.name %> thumbnail' />
      <% end %>
    </div>
    <div class='user-name'>
      <h2><%= @user.name %></h2>
      <p>Number of Posts: <%= @user.posts_counter || 0 %></p>
    </div>
  </div>
  <div class='user-bio'>
    <h4>Bio</h4>
    <h5><%= @user.bio %></h5>
  </div>
  <div class='posts'>
    <% @user.three_most_recent_post.each do |post| %>
      <div class='list-posts'>
        <h5><%= link_to post.title, user_post_path(@user, post) %></h5>
        <p><%= post.text %></p>
        <span class='like-comment'>
          Comments: <%= post.comments_counter || 0 %>, 
          Likes: <%= post.likes_counter || 0 %> 
        </span>
      </div>
    <% end %>
  </div>
  <button class='see-btn'>
    <%= link_to 'see all posts', user_posts_path(@user) %>
  </button>
</section>